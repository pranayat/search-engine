<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">

	<servlet>
		<servlet-name>search</servlet-name>
		<servlet-class>com.search.SearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>searchApi</servlet-name>
		<servlet-class>com.search.SearchApiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>metaSearch</servlet-name>
		<servlet-class>com.search.MetaSearchServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>placeAd</servlet-name>
		<servlet-class>com.adplacement.AdServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdClick</servlet-name>
		<servlet-class>com.adplacement.AdClickServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>searchApi</servlet-name>
		<url-pattern>/json</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>metaSearch</servlet-name>
		<url-pattern>/metasearch</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>placeAd</servlet-name>
		<url-pattern>/placeAd</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdClick</servlet-name>
		<url-pattern>/AdClick</url-pattern>
	</servlet-mapping>

</web-app>